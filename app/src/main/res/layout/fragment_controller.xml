<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/swipeArea"
        android:layout_width="0dp"
        android:layout_height="@dimen/swipe_area_height"
        android:background="?colorPrimary"
        android:elevation="@dimen/swipe_area_elevation"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/axisButtonX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/axis_button_ripple"
        android:elevation="@dimen/axis_button_elevation"
        android:stateListAnimator="@animator/axis_button_state_animator"
        android:text="@string/x"
        app:layout_constraintBottom_toTopOf="@+id/swipeArea"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/axisButtonY"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/swipeArea" />

    <Button
        android:id="@+id/axisButtonY"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/axis_button_ripple"
        android:elevation="@dimen/axis_button_elevation"
        android:stateListAnimator="@animator/axis_button_state_animator"
        android:text="@string/y"
        app:layout_constraintBottom_toTopOf="@+id/swipeArea"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/axisButtonZ"
        app:layout_constraintStart_toEndOf="@+id/axisButtonX"
        app:layout_constraintTop_toTopOf="@+id/swipeArea" />

    <Button
        android:id="@+id/axisButtonZ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/axis_button_ripple"
        android:elevation="@dimen/axis_button_elevation"
        android:stateListAnimator="@animator/axis_button_state_animator"
        android:text="@string/z"
        app:layout_constraintBottom_toTopOf="@+id/swipeArea"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/axisButtonQ"
        app:layout_constraintStart_toEndOf="@+id/axisButtonY"
        app:layout_constraintTop_toTopOf="@+id/swipeArea" />

    <Button
        android:id="@+id/axisButtonQ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/axis_button_ripple"
        android:elevation="@dimen/axis_button_elevation"
        android:stateListAnimator="@animator/axis_button_state_animator"
        android:text="@string/q"
        app:layout_constraintBottom_toTopOf="@+id/swipeArea"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/axisButtonZ"
        app:layout_constraintTop_toTopOf="@+id/swipeArea" />

</androidx.constraintlayout.widget.ConstraintLayout>